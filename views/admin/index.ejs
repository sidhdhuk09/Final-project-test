<%- include('partials/header.ejs') %>

<div class="container-fluid">
    <div class="row">

<%- include('partials/sidebar.ejs') %>




<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Faculty Information Page</h1>
    <div class="btn-toolbar mb-2 mb-md-0"></div>
    <div class="btn-group me-2">
      <a href="/admin/add" class="btn btn-sm btn-outline-secondary">+ Add New Faculty Member</a>
    </div>
  </div>
  
  <!-- Table section -->
  <div class="table-responsive">
    <table class="table table-striped table-hover">
  
      <!-- Table header section -->
      <thead>
        <tr>
          <th scope="col">Name</th>
          <th scope="col">Contact No</th>
          <th scope="col">Email</th>
          <th scope="col">Title</th>
          <th scope="col">Location</th>
          <th scope="col">Department</th>
          <th scope="col">Office Hours</th>
          <!-- <th scope="col">Link</th> -->
          <th scope="col" class="text-end">Action</th>
        </tr>
      </thead>
  
      <!-- Table body. Used foreach to iterate through each and every element in the table. So each column will be iterated through and will be stored in the table -->
      <tbody>
        <% faculty.forEach(element => { %>
  
         
          <tr class="align-items-center">
  
            
            <td><%= element.Name %></td>
  
            
            <td><%= element.contactno %></td>
  
            
            <td><%= element.email %></td>
  
            
            <td><%= element.title %></td>
  
            
            <td><%= element.loc %></td>
  
            
            <td><%= element.dept %></td>
  
            
            <td><%= element.officehours %></td>

            <td class="d-none"><%= element.link %></td>
  
            <!-- where data is being rendered -->
            <td>
                <div class="d-flex flex-row justify-content-end gap-2">
                  <a href="/admin/view/<%= element._id %>" class="text-primary me-2">
                    View 
                  </a>
                  <a href="/admin/edit/<%= element._id %>" class="text-warning me-2">
                    Edit 
                  </a>
                  <form action="/admin/edit/<%= element._id %>?_method=DELETE" method="POST" class="position-relative">
                    <a href="#" onclick="if(confirm('are you sure you want to delete this record?')){this.parentNode.submit()}" class="text-danger">
                      Delete 
                    </a>
                  </form>
                </div>
              </td>
              
  
        <% }) %>
      </tbody>
    </table>
  </div>
  
</main>
</div>
</div>
 