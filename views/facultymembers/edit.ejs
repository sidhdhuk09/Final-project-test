    <div class="row justify-content-between align-items-center">
      <div class="col-auto">
        <h1 class="h3 text-primary mb-0">Edit: <%= faculty.Name %></h1>
      </div>
      <div class="col-auto">
        <!-- <button class="btn btn-sm btn-secondary"><i class="bi bi-question-circle"></i></button> -->
      </div>
    </div>
  </div>
  
  
  <div class="col py-3">
    <div class="row">
      <div class="col">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Faculty Information Page</a></li>
            <li class="breadcrumb-item active"><%= faculty.Name %></li>
          </ol>
        </nav>
      </div>
      <div class="col text-end fw-lighter">
        <b>Last Updated: <%= new Date(faculty.updatedAt).toUTCString() %></b>
        <b>MongoDBObjectID:</b> <%= faculty._id %>
      </div> 
    </div>
  </div>
  
  <form action="/admin/edit/<%= faculty.id.toString() %>?_method=PUT" method="POST">

  
    <div class="row form-group mb-4">
      <div class="col"> 
        <label for="Name">Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="<%= faculty.Name %>" placeholder="Name" required>
      </div>
  
      <div class="col">
        <label for="conno">Contact Number</label>
        <input type="text" class="form-control" id="conno" name="conno" value="<%= faculty.contactno %>" placeholder="Contact Number" required>
      </div>
    </div>
    
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" value="<%= faculty.title %>" placeholder="Title" required>
      </div>
  
      <div class="col">
        <label for="email">Email</label>
        <input type="text" class="form-control" id="email" name="email" value="<%= faculty.email %>" placeholder="Email" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="loc">Location</label>
        <input type="text" class="form-control" id="loc" name="loc" value="<%= faculty.loc %>" placeholder="Location" required>
      </div>
      <div class="col">
        <label for="dept">Department</label>
        <input type="text" class="form-control" id="dept" name="dept" value="<%= faculty.dept %>" placeholder="Department" required>
      </div>
    </div>
  
    <div class="row form-group mb-4">
      <div class="col">
        <label for="officehours">Office Hours</label>
        <input type="text" class="form-control" id="officehours" name="officehours" value="<%= faculty.officehours %>" placeholder="Office Hours" required>
      </div>

      <div class="col">
        <label for="link">Link</label>
        <input type="text" class="form-control" id="link" name="link" value="<%= faculty.link %>" placeholder="Link" >
      </div>
    </div>
    
