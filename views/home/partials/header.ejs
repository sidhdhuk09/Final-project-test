  <style>
        body {
          margin: 0;
          padding: 0;
        }
        .container {
          display: flex;
          flex-direction: column;
          justify-content: center;
          align-items: center;
          height: 100vh;
        }
        .search-form {
          display: flex;
          align-items: center;
          background-color: #FFFFFF;
          border-radius: 50px;
          padding: 10px 20px;
          box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
        }
        .search-input {
          border: none;
          background-color: transparent;
          margin-right: 10px;
          font-size: 18px;
          font-weight: 500;
          color: #707070;
          width: 300px;
        }
        .search-input:focus {
          outline: none;
        }
        .search-button {
          border: none;
          background-color: #f62008;
          color: #FFFFFF;
          font-size: 18px;
          font-weight: 500;
          border-radius: 50px;
          padding: 10px 20px;
          cursor: pointer;
        }
        .admin-button {
          position: absolute;
          top: 10px;
          right: 10px;
          border: none;
          background-color: transparent;
          color: #000000;
          font-size: 16px;
          font-weight: 500;
          cursor: pointer;
          text-decoration: none;
        }
        .breadcrumb {
          background-color: transparent;
          padding: 0;
          margin: 0;
        }
        .breadcrumb li {
          display: inline-block;
          margin-right: 5px;
        }
        .breadcrumb li a {
          color: #333;
          text-decoration: none;
          padding: 0.5rem 1rem;
          border-radius: 0.25rem;
          transition: background-color 0.2s ease-in-out;
        }
        .breadcrumb li.active {
          color: #999;
        }
        .breadcrumb li.active a {
          color: #999;
          pointer-events: none;
        }
        .breadcrumb li a:hover {
          background-color: #007bff;
          color: #fff;
        }
      </style>
    

